{
    "extends": "@tsconfig/strictest",
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "moduleResolution": "nodenext",
        // "lib": [
        //     "ESNext"
        // ],
        "module": "NodeNext",
        "allowJs": true,
        "outDir": "dist",
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "declaration": true,
        "ignoreDeprecations": "5.0",
        "esModuleInterop": true,
    }
}
